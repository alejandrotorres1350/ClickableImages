<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/droid_desserts"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" android:textStyle="bold"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:id="@+id/textView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/donut_circle"
            android:id="@+id/donut"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:contentDescription="@string/DONUTS"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/icecream_circle"
            android:id="@+id/icecream"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/donut" android:contentDescription="@string/ICECREAM"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/froyo_circle"
            android:id="@+id/froyo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/icecream"
            android:contentDescription="@string/FROYO"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDonut" app:layout_constraintStart_toEndOf="@+id/donut"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/donut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            android:text="@string/DONUTS" app:layout_constraintHorizontal_bias="0.49"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewIceCream"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            tools:text="@string/ICECREAM" android:text="@string/DONUTS"
            app:layout_constraintStart_toEndOf="@+id/icecream"
            android:layout_marginStart="24dp" android:layout_marginLeft="24dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/icecream"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewIceCream2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            tools:text="@string/FROYO" android:text="@string/DONUTS"
            app:layout_constraintStart_toEndOf="@+id/froyo"
            android:layout_marginStart="24dp" android:layout_marginLeft="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="@+id/froyo"/>

</android.support.constraint.ConstraintLayout>